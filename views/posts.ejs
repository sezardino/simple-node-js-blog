<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
      <h1>Posts:</h1>
      <ul>
        <% if (posts.length) { %>
          <% posts.forEach((post)=> { %>
            <article>
              <h2>
                <a href="/posts/<%= post.id %>">
                  <%= post.title %>
                </a>
              </h2>
              <p>
                <%= post.text %>
              </p>
              <div class="info">
                <span><%= new Date(post.createdAt).toLocaleDateString() %></span>
                <span><%= post.author %></span>
              </div>
            </article>
            <% }) %>
              <% } %>
      </ul>
  </body>

</html>
